# App
APP_NAME=Velocity
APP_ENV=development
APP_URL=http://localhost:4000
PORT=4000

# Logging
LOG_DRIVER=console
LOG_LEVEL=info

# Encryption
CRYPTO_KEY=base64:your-generated-key-here
CRYPTO_CIPHER=AES-256-CBC

# Database
DB_CONNECTION=sqlite
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=database.sqlite
DB_USERNAME=
DB_PASSWORD=
